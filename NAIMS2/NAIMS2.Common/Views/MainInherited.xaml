<Window x:Class="NAIMS2.Operator.Views.MainInherited"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NAIMS2.Operator.Views"
        mc:Ignorable="d"
                              Title="MainInherited" Height="1080" Width="1920"
        WindowStyle="None" AllowsTransparency="True">
    <Grid Background="#FF3C3C3C">
        <!-- 상단 영역 -->
        <Grid Margin="10,10,10,0" Height="63" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340*" />
                <ColumnDefinition Width="1321*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 좌측 체크박스 (가로로 배치) -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5,0,10,0" VerticalAlignment="Top" Height="29">
                <StackPanel.Resources>
                    <!-- CheckBox 스타일 정의 (기존 RadioButton 스타일을 재사용) -->
                    <Style TargetType="{x:Type CheckBox}">
                        <Setter Property="Foreground" Value="Gray" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type CheckBox}">
                                    <BulletDecorator Background="Transparent">
                                        <BulletDecorator.Bullet>
                                            <Grid Width="16" Height="16">
                                                <!-- 외곽 동그라미 -->
                                                <Ellipse x:Name="OuterCircle" Stroke="#FF3C3C3C" StrokeThickness="2" Fill="Transparent" />
                                                <!-- 내부 체크 동그라미 -->
                                                <Ellipse x:Name="CheckMark" Margin="4" Fill="Green" Visibility="Collapsed" />
                                            </Grid>
                                        </BulletDecorator.Bullet>
                                        <ContentPresenter Margin="4,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" RecognizesAccessKey="True" />
                                    </BulletDecorator>
                                    <ControlTemplate.Triggers>
                                        <!-- 체크된 상태 -->
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                                        </Trigger>
                                        <!-- 마우스 오버 상태 -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="OuterCircle" Property="Stroke" Value="#FF3C3C3C" />
                                        </Trigger>
                                        <!-- 비활성화 상태 -->
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="OuterCircle" Property="Stroke" Value="DarkGray" />
                                            <Setter TargetName="CheckMark" Property="Fill" Value="DarkGray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>
                <CheckBox x:Name="cb_network" Content="네트워크 연동" IsChecked="True" Foreground="Gray" Margin="5" FontFamily="pretendard" FontSize="14" VerticalAlignment="Center" BorderBrush="White" BorderThickness="2,2,2,2" />
                <CheckBox x:Name="cb_drive" Content="저장매체 연동" IsChecked="True" Margin="5" Foreground="Gray" FontFamily="pretendard" FontSize="14" VerticalAlignment="Center" BorderBrush="White" BorderThickness="2,2,2,2" Click="cb_drive_Click" />
                <CheckBox x:Name="cb_direct" Content="직접 연동" Margin="5" Foreground="Gray" FontFamily="pretendard" FontSize="14" VerticalAlignment="Center" BorderBrush="White" BorderThickness="2,2,2,2" />
            </StackPanel>

            <!-- 탭 (가운데 정렬) -->
            <TabControl x:Name="MainTabControl" FontFamily="pretendard" SelectionChanged="MainTabControl_SelectionChanged"
                        HorizontalAlignment="Center" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}}"
                        Grid.ColumnSpan="3" FontSize="14" Background="#FF333333" BorderThickness="0,0,0,0" Margin="2,0,0,36">
                <TabControl.Resources>
                    <!-- 탭 항목 가운데 정렬 스타일 -->
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                    <!-- TabItem 스타일 정의 -->
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Foreground" Value="Gray" />
                        <!-- 기본 글자색: 회색 -->
                        <Setter Property="Background" Value="#FF3C3C3C" />
                        <!-- 기본 배경색: RGB(60,60,60) -->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Border x:Name="Border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Background="{TemplateBinding Background}" Margin="0">
                                        <ContentPresenter x:Name="ContentSite"
                                                          ContentSource="Header"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="10,2" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- 선택된 탭일 때 -->
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Foreground" Value="White" />
                                            <!-- 선택 시 글자색: 하얀색 -->
                                            <Setter TargetName="Border" Property="Background" Value="#FF3C3C3C" />
                                            <!-- 선택 시 배경색 -->
                                        </Trigger>
                                        <!-- 선택되지 않은 탭일 때 -->
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter Property="Foreground" Value="Gray" />
                                            <!-- 선택되지 않을 때 글자색: 회색 -->
                                            <Setter TargetName="Border" Property="Background" Value="#FF333333" />
                                            <!-- 선택되지 않을 때 배경색: RGB(60,60,60) -->
                                        </Trigger>
                                        <!-- 마우스 오버 시 -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FF333333" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="자료통제관리" />
                <TabItem Header="음향정보 관리/분석" />
                <TabItem Header="기준식별 DB 관리" />
                <TabItem Header="해양환경정보 관리/분석" />
                <TabItem Header="시스템관리" />
            </TabControl>

            <!-- 우측 날짜/시간 및 버튼 (가로로 배치) -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0,5,0" VerticalAlignment="Top" Height="35">
                <TextBlock x:Name="DateTimeTextBlock" Text="2025-05-25 14:33:00" Margin="5" VerticalAlignment="Center" FontFamily="pretendard" FontSize="14" Foreground="#FFEFE6E6" />
                <Button x:Name="btn_alarm" Margin="5" Width="32" FontSize="14" VerticalAlignment="Center" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="C:/workspace/NAIMS2/NAIMS2.Operator/ico/알림.ico" Width="16" Height="16" Margin="0,0,5,0" />
                        <TextBlock VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button x:Name="btn_chat" Margin="5" Width="32" FontSize="14" VerticalAlignment="Center" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="C:/workspace/NAIMS2/NAIMS2.Operator/ico/리스트.ico" Width="16" Height="16" Margin="0,0,5,0" />
                        <TextBlock VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 본문 -->
        <Grid Margin="10,80,10,10">
            <!-- 하단 탭 (전체 크기로 설정) -->
            <TabControl x:Name="BodyTabControl" Margin="0,-40,0,5" Background="#FF3C3C3C" FontSize="14" BorderThickness="0,0,0,0" SelectionChanged="BodyTabControl_SelectionChanged">
                <TabControl.Resources>
                    <!-- 탭 항목 가운데 정렬 스타일 -->
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Left" />
                    </Style>
                    <!-- TabItem 스타일 정의 -->
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Foreground" Value="Gray" />
                        <Setter Property="Background" Value="#FF333333" />
                        <!-- 미선택 시 배경색: RGB(51,51,51) -->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Border x:Name="Border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Background="{TemplateBinding Background}" Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite"
                                                          ContentSource="Header"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="10,2" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- 선택된 탭일 때 -->
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Foreground" Value="White" />
                                            <!-- 선택 시 글자색: 하얀색 -->
                                            <Setter TargetName="Border" Property="Background" Value="#FF3C3C3C" />
                                            <!-- 선택 시 배경색: RGB(60,60,60) -->
                                        </Trigger>
                                        <!-- 선택되지 않은 탭일 때 -->
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter Property="Foreground" Value="Gray" />
                                            <!-- 선택되지 않을 때 글자색: 회색 -->
                                            <Setter TargetName="Border" Property="Background" Value="#FF333333" />
                                            <!-- 선택되지 않을 때 배경색: RGB(51,51,51) -->
                                        </Trigger>
                                        <!-- 마우스 오버 시 -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FF333333" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <!-- 초기 내용은 비워두고 코드에서 동적으로 채움 -->
                <TabItem Header="송수신 자료" FontFamily="pretendard" FontSize="14"/>
            </TabControl>
        </Grid>
    </Grid>
</Window>