<Window x:Class="NAIMS2.Common.Views.MainWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NAIMS2.Common.ViewModels"
        xmlns:viewModels="clr-namespace:NAIMS2.Common.ViewModels;assembly=NAIMS2.Common"
        mc:Ignorable="d"
        Title="NAIMS-II 해군음향관리체계" Height="1080" Width="1920"
        WindowStyle="None" AllowsTransparency="True">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:DashboardContentViewModel}">
            <Border BorderBrush="LightBlue" BorderThickness="2" Margin="5" Padding="15" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="대시보드 화면입니다." FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding DashboardData}" FontSize="14" />
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SettingsContentViewModel}">
            <Border BorderBrush="LightGreen" BorderThickness="2" Margin="5" Padding="15" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="설정 화면입니다." FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock Text="설정 항목: "/>
                    <TextBox Text="{Binding SettingName}" Width="200" HorizontalAlignment="Left" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Grid Background="#FF3C3C3C">
        <Grid Margin="10,10,10,0" Height="63" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340*" />
                <ColumnDefinition Width="1321*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5,0,10,0" VerticalAlignment="Top" Height="29">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type CheckBox}">
                        <Setter Property="Foreground" Value="Gray" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type CheckBox}">
                                    <BulletDecorator Background="Transparent">
                                        <BulletDecorator.Bullet>
                                            <Grid Width="16" Height="16">
                                                <Ellipse x:Name="OuterCircle" Stroke="#FF3C3C3C" StrokeThickness="2" Fill="Transparent" />
                                                <Ellipse x:Name="CheckMark" Margin="4" Fill="Green" Visibility="Collapsed" />
                                            </Grid>
                                        </BulletDecorator.Bullet>
                                        <ContentPresenter Margin="4,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" RecognizesAccessKey="True" />
                                    </BulletDecorator>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="OuterCircle" Property="Stroke" Value="#FF3C3C3C" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="OuterCircle" Property="Stroke" Value="DarkGray" />
                                            <Setter TargetName="CheckMark" Property="Fill" Value="DarkGray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>
                <CheckBox x:Name="cb_network" Content="네트워크 연동" IsChecked="True" Foreground="Gray" Margin="5" FontFamily="pretendard" FontSize="14" VerticalAlignment="Center" BorderBrush="White" BorderThickness="2,2,2,2" />
                <CheckBox x:Name="cb_drive" Content="저장매체 연동" IsChecked="True" Margin="5" Foreground="Gray" FontFamily="pretendard" FontSize="14" VerticalAlignment="Center" BorderBrush="White" BorderThickness="2,2,2,2" Click="cb_drive_Click" />
                <CheckBox x:Name="cb_direct" Content="직접 연동" Margin="5" Foreground="Gray" FontFamily="pretendard" FontSize="14" VerticalAlignment="Center" BorderBrush="White" BorderThickness="2,2,2,2" />
            </StackPanel>
            <TabControl x:Name="MainTabControl" FontFamily="pretendard"
                        ItemsSource="{Binding TopTabItems}"
                        SelectedIndex="{Binding SelectedTopTabIndex, Mode=TwoWay}"
                        SelectionChanged="MainTabControl_SelectionChanged"
                        HorizontalAlignment="Center" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}}"
                        Grid.ColumnSpan="3" FontSize="14" Background="#FF333333" BorderThickness="0,0,0,0" Margin="2,0,0,36">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Header}" FontWeight="Bold" Margin="5,2" />
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Foreground" Value="Gray" />
                        <Setter Property="Background" Value="#FF3C3C3C" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Border x:Name="Border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Background="{TemplateBinding Background}" Margin="0">
                                        <ContentPresenter x:Name="ContentSite"
                                                          ContentSource="Header"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="10,2" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter TargetName="Border" Property="Background" Value="#FF3C3C3C" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter Property="Foreground" Value="Gray" />
                                            <Setter TargetName="Border" Property="Background" Value="#FF333333" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FF333333" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
            </TabControl>
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0,5,0" VerticalAlignment="Top" Height="35">
                <TextBlock x:Name="DateTimeTextBlock" Text="2025-05-25 14:33:00" Margin="5" VerticalAlignment="Center" FontFamily="pretendard" FontSize="14" Foreground="#FFEFE6E6" />
                <Button x:Name="btn_alarm" Margin="5" Width="32" FontSize="14" VerticalAlignment="Center" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="C:\workspace\NAIMS2\NAIMS2.Operator\Resources\알림.ico" Width="16" Height="16" Margin="0,0,5,0" />
                        <TextBlock VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button x:Name="btn_chat" Margin="5" Width="32" FontSize="14" VerticalAlignment="Center" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="C:\workspace\NAIMS2\NAIMS2.Operator\Resources\리스트.ico" Width="16" Height="16" Margin="0,0,5,0" />
                        <TextBlock VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Margin="10,80,10,10">
            <TabControl x:Name="BodyTabControl" ItemsSource="{Binding BodyTabItems}" Margin="0,-40,0,5" Background="#FF3C3C3C" FontSize="14" BorderThickness="0,0,0,0" SelectionChanged="BodyTabControl_SelectionChanged">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Header}" FontWeight="Bold" Margin="5,2" />
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding ContentViewModel}" />
                    </DataTemplate>
                </TabControl.ContentTemplate>
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Left" />
                    </Style>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Foreground" Value="Gray" />
                        <Setter Property="Background" Value="#FF333333" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Border x:Name="Border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Background="{TemplateBinding Background}" Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite"
                                                          ContentSource="Header"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="10,2" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter TargetName="Border" Property="Background" Value="#FF3C3C3C" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter Property="Foreground" Value="Gray" />
                                            <Setter TargetName="Border" Property="Background" Value="#FF333333" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FF333333" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
            </TabControl>
        </Grid>
    </Grid>
</Window>