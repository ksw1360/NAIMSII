<UserControl x:Class="NAIMS2.DataManager.Views.PercentGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NAIMS2.DataManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="72" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" 
                   Text="{Binding ElementName=ProgressBar, Path=Value, StringFormat={}{0}%}" 
                   VerticalAlignment="Center" 
                   FontSize="14" 
                   Margin="0,0,10,0" Height="18" TextAlignment="Center"/>
        <ProgressBar x:Name="ProgressBar" 
                     Value="{Binding ProgressValue, ElementName=UcProgressWithText}" 
                     Minimum="0" 
                     Maximum="100" Margin="0,215,0,215" Grid.Column="1"/>
    </Grid>
</UserControl>
