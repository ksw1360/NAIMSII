<UserControl x:Class="NAIMS2.Common.Views.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NAIMS2.Common.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="87*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="206*"/>
        </Grid.RowDefinitions>
        <Label Content="시스템 환경설정" Background="Black" Foreground="White" HorizontalAlignment="Left" Width="800" Grid.ColumnSpan="2" Margin="0,0,0,410" Grid.RowSpan="2"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#3A3A3A" Grid.ColumnSpan="2">
            <Label Content="날짜 설정" Background="Transparent" Foreground="White" Height="290"/>
            <CheckBox Background="White" Foreground="White" Height="35" Width="77">
                <TextBlock Text="자동 설정" FontFamily="pretendard" FontSize="14"/>
            </CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
