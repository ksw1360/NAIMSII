                                    <Grid Grid.Column="1" Height="20" Background="#3E3E42" ClipToBounds="True">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Binding PreCompletionWidth, Mode=OneWay}"/>
                                            <ColumnDefinition Width="{Binding InCompletionWidth, Mode=OneWay}"/>
                                            <ColumnDefinition Width="{Binding PreDetailedWidth, Mode=OneWay}"/>
                                            <ColumnDefinition Width="{Binding InDetailedWidth, Mode=OneWay}"/>
                                        </Grid.ColumnDefinitions>

                                        <Rectangle Grid.Column="0" Fill="#C0BFFF"/>
                                        <Rectangle Grid.Column="1" Fill="#5F13FF"/>
                                        <Rectangle Grid.Column="2" Fill="#CFEDFF"/>
                                        <Rectangle Grid.Column="3" Fill="#1371FF"/>
                                    </Grid>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0,0,0">
